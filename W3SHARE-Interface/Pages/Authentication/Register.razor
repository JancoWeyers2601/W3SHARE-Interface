@page "/Register"


<body>
    <div id="login">

        <h3 class="text-center text-white pt-5">Login form</h3>

        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" >

                            <h3 class="text-center text-info">Register</h3>

                            <div class="form-group">
                                <label for="name" class="text-info">Name:</label><br>
                                <input type="text" name="username" id="name" class="form-control"  @bind="@Name">
                            </div>

                            <div class="form-group">
                                <label for="Surname" class="text-info">Surname:</label><br>
                                <input type="text" name="password" id="Surname" class="form-control"  @bind="@Surname">
                            </div>

                            <div class="form-group">
                                <label for="email" class="text-info">Email:</label><br>
                                <input type="text" name="email" id="email" class="form-control"  @bind="@Email">
                            </div>

                            <div class="form-group">
                                <label for="Password" class="text-info">Password:</label><br>
                                <input type="text" name="Password" id="Password" class="form-control" @bind="@Password">
                            </div>

                            <div class="form-group">
                                <label for="Confirm password" class="text-info">Confirm password:</label><br>
                                <input type="text" name="Confirm password" id="Confirm password" class="form-control"  @bind="@ConfirmPassword">
                            </div>

                            <div class="form-group">
                                <input name="submit" class="btn btn-info btn-md" value="Register" type="submit" @onclick="RegisterBTN">
                            </div>

                            <div id="register-link" class="text-right">
                                <a href="/" class="text-info">Login here</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

